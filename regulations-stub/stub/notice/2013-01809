        "1026-35-c-4-vi-A-Interp-3-i": [
            {
                "action": "POST", 
                "node": {
                    "children": [], 
                    "label": [
                        "1026", 
                        "35", 
                        "c", 
                        "4", 
                        "vi", 
                        "A", 
