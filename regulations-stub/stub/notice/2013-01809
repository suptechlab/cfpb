                        {
                            "children": [], 
                            "footnote_refs": [
                                {
                                    "offset": 768, 
                                    "paragraph": 2, 
                                    "reference": "44"
                                }, 
                                {
                                    "offset": 631, 
                                    "paragraph": 3, 
                                    "reference": "45"
                                }, 
                                {
                                    "offset": 239, 
                                    "paragraph": 4, 
                                    "reference": "46"
                                }, 
                                {
                                    "offset": 1109, 
                                    "paragraph": 9, 
                                    "reference": "47"
